@model List<EClinic.Web.ViewModels.Appointments.DoctorGetAllAppointmentsFullViewModel>

@{
    ViewData["Title"] = "Pages";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-file-text-o"></i> All Apointments</h3>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a asp-area="Administration" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li><i class="icon_document_alt"></i>All Apointments</li>
                    
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Slides
                    </header>

                    <table class="table table-striped table-advance table-hover">
                        <tbody>
                            <tr>
                                <th><i class=""></i> №</th>
                                <th><i class=""></i> Doctor Name</th>
                                <th><i class=""></i> Scheduled for</th>
                                <th><i class=""></i> Patient Name</th>
                                <th><i class=""></i> Created On</th>
                                <th><i class=""></i> Action</th>
                            </tr>
                            @{int counter = 1;}
                            @if (Model.Count() > 0)
                            {
                                @foreach (var appointment in Model.OrderByDescending(x => x.AppointmentDateTime))
                                {
                                    <tr>
                                        <td>@counter.ToString()</td>
                                        <td>@appointment.DoctorName</td>
                                        <td>@appointment.AppointmentDateTime</td>
                                        <td>@appointment.PatientName</td>
                                        <td>@appointment.CreatedOn</td>


                                        <td>
                                            <div class="btn-group">
                                                <a asp-controller="Appointment" asp-action="GetSingelAppointment" asp-route-id="@appointment.Id" class="btn btn-info"><i class="icon_info"></i></a>
                                                <a class="btn btn-danger" asp-controller="Appointment" asp-action="DeleteAppointment" asp-route-id="@appointment.Id"><i class="icon_close_alt2"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                    counter++;
                                }
                            }
                            else
                            {
                                <tr><td colspan="6"> No Appointments</td></tr>
                            }

                        </tbody>
                    </table>


                </section>
            </div>
        </div>
        <!-- page end-->
    </section>
</section>
<!--main content end-->
