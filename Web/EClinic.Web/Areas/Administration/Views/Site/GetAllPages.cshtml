@model List<EClinic.Web.ViewModels.Site.PageViewModel>
@{
    ViewData["Title"] = "Pages";
}

<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa-file-text-o"></i> Form elements</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a asp-area="Administration" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li><i class="icon_document_alt"></i>Site</li>
                    <li><i class="fa fa-file-text-o"></i>Pages</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Slides
                    </header>

                    <table class="table table-striped table-advance table-hover">
                        <tbody>
                            <tr>
                                <th><i class="icon_profile"></i> №</th>
                                <th><i class="icon_calendar"></i> Title</th>
                                <th><i class="icon_mail_alt"></i> Created On</th>
                                <th><i class="icon_cogs"></i> Action</th>
                            </tr>
                            @{int counter = 1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@counter.ToString()</td>
                                    <td>@item.Title</td>
                                    <td>@item.CreatedOn</td>

                                    <td>
                                        <div class="btn-group">
                                            <a asp-area="Administration" asp-controller="Site" asp-action="EditPage" asp-route-id="@item.Id" class="btn btn-primary"><i class="icon_pencil-edit_alt"></i></a>
                                            <a class="btn btn-danger" href="#"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                counter++;
                            }

                        </tbody>
                    </table>
                </section>
            </div>
        </div>
        <!-- page end-->
    </section>
</section>
<!--main content end-->