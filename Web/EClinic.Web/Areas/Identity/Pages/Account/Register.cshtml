@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>




<div class="container">

    <form class="login-form" asp-route-returnUrl="@Model.ReturnUrl" method="post" id="account" method="post">
        <div class="login-wrap">
            <p class="login-img"><i class="icon_lock_alt"></i></p>
            <div asp-validation-summary="All" class="text-danger"></div>
            @*<label asp-for="Input.Username"></label>*@
            @*<div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input asp-for="Input.Username" class="form-control" />
                <span style="display:table-caption" asp-validation-for="Input.Username" class="text-danger"></span>
            </div>*@
            <label asp-for="Input.FirstName"></label>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input asp-for="Input.FirstName" class="form-control" />
                <span style="display:table-caption" asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <label asp-for="Input.MiddleName"></label>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input asp-for="Input.MiddleName" class="form-control" />
                <span style="display:table-caption" asp-validation-for="Input.MiddleName" class="text-danger"></span>
            </div>
            <label asp-for="Input.LastName"></label>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input asp-for="Input.LastName" class="form-control" />
                <span style="display:table-caption" asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <label asp-for="Input.Age"></label>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_clock_alt"></i></span>
                <input asp-for="Input.Age" class="form-control" />
                <span style="display:table-caption" asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <label asp-for="Input.Address"></label>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_house"></i></span>
                <input asp-for="Input.Address" class="form-control" />
                <span style="display:table-caption" asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <label asp-for="Input.Email"></label>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_mail"></i></span>
                <input asp-for="Input.Email" class="form-control" />
                <span style="display:table-caption" asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <label asp-for="Input.Password"></label>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input asp-for="Input.Password" class="form-control" />
                <span style="display:table-caption" asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <label asp-for="Input.ConfirmPassword"></label>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span style="display:table-caption" asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button class="btn btn-primary btn-lg btn-block" type="submit">Register</button>
            <a asp-area="Identity" asp-page="Login" class="btn btn-info btn-lg btn-block" type="submit">Login</a>
        </div>
    </form>
    <div class="text-right">
