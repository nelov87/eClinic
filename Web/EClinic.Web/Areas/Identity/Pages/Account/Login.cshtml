@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="container">

    <form class="login-form" id="account" method="post">
        <div class="login-wrap">
            <p class="login-img"><i class="icon_lock_alt"></i></p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                admin: nelov87@gmail.com<br />
                pass = 123456<br />
                doctor: nelov872@gmail.com<br />
                pass: 123456<br />
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input asp-for="Input.Username" type="text" class="form-control" placeholder="Username" autofocus>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
            </div>
            <label class="checkbox">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
            <a asp-area="Identity" asp-page="Register" class="btn btn-info btn-lg btn-block" type="submit">Register</a>
        </div>
    </form>
    <div class="text-right">
